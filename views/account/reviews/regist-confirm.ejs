<!DOCTYPE html>
<html lang="ja">
<head>
  <%- include("../../_share/metadata.ejs") %>
  <title>Shop</title>
  <%- include("../../_share/stylesheets.ejs") %>
  <link rel="stylesheet" href="/public/stylesheets/shop.css" />
</head>
<body>
  <div class="outerframe">
    <%- include("../../_share/navbar.ejs") %>
    <main class="container">
      <div class="border-bottom my-5">
        <h1>口コミの投稿</h1>
      </div>

      <div>
        <form>
          <input type="hidden" id="shopId" name="shopId" value="<%= shopId %>">
          <div class="form-group row">
            <label for="shopName" class="col-sm-2 col-form-label">店舗</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" id="shopName" name="shopName" value="<%= shopName %>" />
            </div>
          </div>
          <div class="form-group row">
            <label for="visit" class="col-sm-2 col-form-label">訪問日</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control" id="visit" name="visit" placeholder="yyyy/mm/dd" value="<%= review.visit ? moment(review.visit).format('YYYY/MM/DD') : '' %>"/>
            </div>
          </div>
          <div class="form-group row">
            <label for="score" class="col-sm-2 col-form-label">評価</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control" id="score" name="score" value="<%= review.score %>"/>
            </div>
          </div>
          <div class="form-group row">
            <label for="description" class="col-sm-2 col-form-label">本文</label>
            <div class="col-sm-10">
              <textarea class="form-control" readonly name="description" id="description" rows="5"><%= (review.description || '') %></textarea>
            </div>
          <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
              <input type="submit" class="btn btn-primary" data-method="POST" data-action="/account/reviews/regist/<%= shopId %> " value="修正">
              <input type="submit" class="btn btn-primary" data-method="POST" data-action="/account/reviews/regist/execute" value="登録">
            </div>
          </div>
        </form>
      </div>
    </main>
    <%- include("../../_share/footer.ejs") %>
  </div>
  <%- include("../../_share/javascripts.ejs") %>
  <script type="text/javascript" src="/public/javascripts/regist.js"></script>

</body>
</html>
